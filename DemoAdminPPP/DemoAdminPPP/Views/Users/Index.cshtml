@model IEnumerable<DemoAdminPPP.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Bảng quần áo phượt
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Tên</th>
                            <th>Email</th>
                            <th>Pass</th>
                            <th>Địa chỉ</th>
                            <th>Sđt</th>
                            <th>Quyền</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr class="odd gradeX">
                            <td>
                                @Html.DisplayFor(modelItem => item.users_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.users_email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.users_password)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.users_address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.users_phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.permisson)
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.users_id }) |
                                @Html.ActionLink("Chi tiết", "Details", new { id = item.users_id }) |
                                @Html.ActionLink("Xóa", "Delete", new { id = item.users_id })
                            </td>
                        </tr>
                        }


                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->

        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>

