@model IEnumerable<DemoAdminPPP.Models.Product>

@{
    ViewBag.Title = "Sản Phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title - Admin Phượt Phượt Phú</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/Content/admin/css/bootstrap.min.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="~/Content/admin/css/metisMenu.min.css" rel="stylesheet">

    <!-- DataTables CSS -->
    <link href="~/Content/admin/css/dataTables/dataTables.bootstrap.css" rel="stylesheet">

    <!-- DataTables Responsive CSS -->
    <link href="~/Content/admin/css/dataTables/dataTables.responsive.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Content/admin/css/startmin.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/Content/admin/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Bảng quần áo phượt
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Tên</th>
                            <th>Mô tả</th>
                            <th>Giá</th>
                            <th>Loại</th>
                            <th>Tên nhà SX</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX">
                                <td>
                                    @Html.DisplayFor(modelItem => item.product_name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.product_description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category.category_name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Publisher.publisher_name)
                                </td>
                                <td>
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.product_id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.product_id }) |
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.product_id })
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->

        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->
<!-- jQuery -->
<script src="~/Content/admin/js/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/Content/admin/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/Content/admin/js/metisMenu.min.js"></script>

<!-- DataTables JavaScript -->
<script src="~/Content/admin/js/dataTables/jquery.dataTables.min.js"></script>
<script src="~/Content/admin/js/dataTables/dataTables.bootstrap.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/Content/admin/js/startmin.js"></script>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>

